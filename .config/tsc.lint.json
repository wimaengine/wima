{
  "include": [
    "../src",
    "../demos"
  ],
  "exclude":[
    "../**/*.test.js"
],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "checkJs": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "target": "ES2020",
    "skipLibCheck":true,
    "paths":{
      "wima":["../src/index.js"]
    }
  }
}